<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Notification Type -->
        <TextView
            android:id="@+id/text_notification_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Notification Message -->
        <TextView
            android:id="@+id/text_notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="You have an appointment scheduled at 10:00 AM."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Scheduled Time -->
        <TextView
            android:id="@+id/text_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Scheduled: 2025-04-15 10:00 AM"
            android:textColor="#666666"
            android:textSize="12sp" />

        <!-- Notification Status -->
        <TextView
            android:id="@+id/text_notification_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Status: Pending"
            android:textColor="@color/red"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>